extends layout

block headcontent
  style.
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font: 13px Helvetica, Arial; }
    form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
    form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
    form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
    #messages { list-style-type: none; margin: 0; padding: 0; }
    #messages li { padding: 5px 10px; }
    #messages li:nth-child(odd) { background: #eee; }


block content
  ul(id="messages")
  form(action="")
    input(id="m" autocomplete="off")
    button Send

  script(src="http://code.jquery.com/jquery-1.11.1.js")
  script(src="socket.io/socket.io.js")
  script.
    // TODO: refactor out startChat after username entry added in
    function startChat(username, recvr) {
      var socket = io();
      socket.emit('identify', username); // TODO: send a custom user here
      $('form').submit(function () {
        var msgObj = {
          msg: $('#m').val(),
          recvr: recvr
        };
        socket.emit('chat', msgObj);
        $('#m').val('');
        return false;
      });
      socket.on('chatreply', function (msgObj) {
        console.log("[%s] %s", msgObj.sendr, msgObj.msg);
      });
    }
